<!-- login page for my piano roll app -->

<!doctype html>

<html>

<style>
    body{
        padding: 0;
        font-family: sans-serif;
    }
    #loginScreen{
        display: block;
        width: 400px;
        height: 400px;
        margin: 0 auto;
        margin-top: 10%;
        border: 1px solid #000;
        border-radius: 15px;
        text-align: center;
        box-shadow: 8px 6px 6px #cccddd; 
    }
    #bottom{
        margin-top: 20%;
        width: 100%;
    }
    #user, #pass{
        font-size: 18px;
        display: block;
        margin-top: 8%;
    }
    #myname{
        font-size: 12px;
        display: block;
        margin: 0 auto;
    }
    #register{
        font-size: 18px;
    }
    button{
        margin-top: 25px;
        padding: 4px 5px 4px 5px;
        border-radius: 6px;
        border: 1px solid #000;
    }
    a{
        text-decoration: none;
        color: #7691bc;
    }
    .alert{
        color: #b91919;
    }
    
    /* for mobile devices */
    @media screen and (max-width: 800px){
        body, html{
            padding: 0;
            margin: 0;
        }
        #loginScreen{
            margin: 0;
            width: 100%;
            height: 100%;
            box-shadow: 0px 0px 0px #fff; 
            border: none;
        }
        #bottom{
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    }
</style>

<head>
    <meta charset='utf-8'>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <title> login - Piano Roll Online </title>
</head>

<body>

    <div id='loginScreen'>
        <div id='top'>
            <h2> Piano Roll Online </h2>
        </div>
        
        <!-- show message that comes back with authentication, if any -->
        <% if (message.length > 0) { %>
            <div class='alert'> <%= message %></div>
        <% } %>
        
        <!-- login form -->
        <form action='/login' method='post'>
            <div>
                <label id='user'> user name: <input name='username' type='text'></label>
                <label id='pass'> password: <input name='password' type='password'></label>
            </div>
            
            <button id='submit'> enter </button>
        </form>
        
        <!-- end form -->
        
        <!-- <p id='def'> or <a onclick='defaultSubmit()' href='#'> enter </a> as a default user (nothing will be saved!) </p> -->
        <p id='register'> or <a href='/register'> register </a> as a new user </p>
        
        <br>
        
        <h4> disclaimer: this application is not designed to be used on mobile devices </h4>


    </div>
    
</body>

<script>
</script>

</html>